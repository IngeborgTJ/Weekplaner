<h1> My to do list:</h1>

<table>
  <thead>
    <tr>
      <th> Plans: </th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @weekplans.each do |weekplan| %>
      <tr>
        <td><%= weekplan.plan %></td>
        <td><%= link_to 'Show', weekplan %></td>
        <td><%= link_to 'Edit', edit_weekplan_path(weekplan) %></td>
        <td><%= link_to 'Delete', weekplan, method: :delete, data: { confirm: 'Are you sure you want to delete this plan?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

